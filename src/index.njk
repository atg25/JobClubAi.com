---
title: AInspire - Where Students Grow Into Future-Ready Professionals
layout: layouts/landing.njk
---

<!-- Hero Section -->
<section id="home" class="relative flex flex-col pt-6 pb-8 px-6 sm:px-8 lg:px-4" x-data="{ mobileMenuOpen: false, activeSection: 'home' }" x-init="
  // Scroll spy for active nav state
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && entry.intersectionRatio > 0.5) {
        activeSection = entry.target.id;
      }
    });
  }, { threshold: 0.5 });
  
  ['home', 'join', 'events', 'resources', 'portfolio'].forEach(id => {
    const el = document.getElementById(id);
    if (el) observer.observe(el);
  });
">
  <!-- Navigation Pill - Fixed at Top -->
  <div class="flex justify-center items-center gap-4 lg:gap-8">
    <span class="text-white text-3xl lg:text-5xl transition-all duration-300 hover:[text-shadow:0_0_15px_rgba(255,255,255,0.5),0_0_30px_rgba(255,255,255,0.3)] cursor-default" style="font-family: 'Girassol', cursive;">AInspire</span>
    
    <!-- Mobile Hamburger Button -->
    <button @click="mobileMenuOpen = !mobileMenuOpen" class="lg:hidden text-white p-2 rounded-full border border-white/20 bg-white/5 hover:bg-white/10 transition-all duration-300" aria-label="Toggle menu">
      <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg x-show="mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Desktop Navigation -->
    <nav class="glass-nav hidden lg:inline-flex items-center justify-center gap-2 px-3 py-2 rounded-full">
      <a href="#home" class="nav-link" :class="{ 'nav-link-active': activeSection === 'home' }" aria-label="Navigate to home">Home</a>
      <a href="#join" class="nav-link" :class="{ 'nav-link-active': activeSection === 'join' }" aria-label="Join the club">Join</a>
      <a href="#events" class="nav-link" :class="{ 'nav-link-active': activeSection === 'events' }" aria-label="View events">Events</a>
      <a href="#resources" class="nav-link" :class="{ 'nav-link-active': activeSection === 'resources' }" aria-label="Access resources">Resources</a>
      <a href="#portfolio" class="nav-link" :class="{ 'nav-link-active': activeSection === 'portfolio' }" aria-label="Portfolio tips">Portfolio Tips</a>
    </nav>
  </div>

  <!-- Mobile Menu Drawer -->
  <div x-show="mobileMenuOpen" 
       x-transition:enter="transition ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition ease-in duration-200"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0"
       @click.away="mobileMenuOpen = false"
       class="lg:hidden fixed inset-0 z-50 bg-slate-900/80 backdrop-blur-md">
    <nav class="flex flex-col items-center justify-center h-full gap-6 px-8">
      <a href="#home" @click="mobileMenuOpen = false" class="nav-link text-2xl" :class="{ 'nav-link-active': activeSection === 'home' }">Home</a>
      <a href="#join" @click="mobileMenuOpen = false" class="nav-link text-2xl" :class="{ 'nav-link-active': activeSection === 'join' }">Join</a>
      <a href="#events" @click="mobileMenuOpen = false" class="nav-link text-2xl" :class="{ 'nav-link-active': activeSection === 'events' }">Events</a>
      <a href="#resources" @click="mobileMenuOpen = false" class="nav-link text-2xl" :class="{ 'nav-link-active': activeSection === 'resources' }">Resources</a>
      <a href="#portfolio" @click="mobileMenuOpen = false" class="nav-link text-2xl" :class="{ 'nav-link-active': activeSection === 'portfolio' }">Portfolio Tips</a>
    </nav>
  </div>

  <!-- Hero Content -->
  <div class="container-unified text-center mt-16 lg:mt-24 px-4">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-normal text-white mb-6 lg:mb-8 leading-tight italic" style="font-family: Georgia, 'Times New Roman', serif;">
      {{ pageContent.hero.title }}
    </h1>

    <p class="text-sm sm:text-base text-gray-300 max-w-3xl mx-auto mb-6 lg:mb-8 leading-relaxed">
      {{ pageContent.hero.subtitle }}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#join" class="btn-primary w-full sm:w-auto">
        Join the Club
      </a>
      <a href="#events" class="btn-secondary w-full sm:w-auto">
        Check out Events
      </a>
    </div>
  </div>
</section>

<!-- Events Section -->
<section id="events" class="py-12 lg:py-16 px-6 sm:px-8 lg:px-4">
  <div class="container-unified">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-normal text-white text-center mb-10 lg:mb-12 italic" style="font-family: Georgia, 'Times New Roman', serif;">Attend an Event</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for event in events %}
      <article class="bg-gradient-event glass-card rounded-2xl p-6 shadow-[0_8px_30px_rgba(0,0,0,0.3)] flex flex-col">
        <h3 class="text-xl font-bold text-white mb-4 uppercase tracking-wide leading-tight">{{ event.title }}</h3>

        <div class="flex items-center gap-3 mb-3">
          <svg class="w-5 h-5 flex-shrink-0 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h18M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <div class="text-white/90 text-sm">
            <time datetime="{{ event.date }}" class="font-medium">{{ event.date }}</time>
            <span class="text-white/70"> â€¢ {{ event.time }}</span>
          </div>
        </div>

        <div class="flex items-center gap-3 mb-5">
          <svg class="w-5 h-5 flex-shrink-0 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-white/90 text-sm font-medium">{{ event.location }}</span>
        </div>

        <p class="text-white/80 text-sm mb-5 leading-relaxed flex-grow">
          {{ event.description }}
        </p>

        <a href="{{ event.link }}" class="btn-event" aria-label="Add {{ event.title }} to calendar">
          Add to Calendar
        </a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Portfolio Section 1 - Transform Your Portfolio -->
<section id="portfolio" class="py-12 lg:py-16 px-6 sm:px-8 lg:px-4">
  <div class="container-unified">
    <div class="mb-8 lg:mb-10 text-center">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-normal text-white mb-3 italic" style="font-family: Georgia, 'Times New Roman', serif;">Transform Your Portfolio</h2>
      <p class="text-sm sm:text-base text-gray-300 max-w-2xl mx-auto leading-relaxed">
        Create a portfolio that stands out to employers and showcases your expertise with proven frameworks.
      </p>
    </div>

    <!-- Interactive Portfolio Window -->
    <div class="portfolio-window">
      <div class="bg-slate-800/50 px-4 py-3 border-b border-white/20 flex items-center gap-2">
        <div class="flex gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
          <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
        </div>
        <span class="text-xs text-white/60 ml-4">portfolio.alexchen.dev</span>
      </div>
      <div class="aspect-video bg-slate-900/50">
        <iframe 
          src="https://kaw393939.github.io/117_final_fall_2025/portfolio/" 
          class="w-full h-full"
          title="Professional portfolio example"
          loading="lazy"
          sandbox="allow-scripts allow-same-origin"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<!-- Portfolio Section 2 - DO/DON'T -->
<section id="resources" class="py-12 lg:py-16 px-6 sm:px-8 lg:px-4">
  <div class="container-unified">
    <!-- DO/DON'T Cards -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- DO Card -->
      <article class="bg-gradient-purple rounded-2xl p-7 border border-white/40 shadow-xl">
        <div class="flex items-center gap-2.5 mb-4 pb-4 border-b border-white/20">
          <div class="w-8 h-8 rounded-full border-2 border-white flex items-center justify-center" aria-hidden="true">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white uppercase tracking-wide">DO</h3>
        </div>
        <ul class="space-y-3 text-white/95">
          {% for item in pageContent.methodology.do %}
          <li class="text-sm font-medium leading-snug">{{ item }}</li>
          {% endfor %}
        </ul>
      </article>

      <!-- DON'T Card -->
      <article class="bg-gradient-slate rounded-2xl p-7 border border-white/40 shadow-xl">
        <div class="flex items-center gap-2.5 mb-4 pb-4 border-b border-white/20">
          <div class="w-8 h-8 rounded-full border-2 border-white flex items-center justify-center" aria-hidden="true">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white uppercase tracking-wide">DON'T</h3>
        </div>
        <ul class="space-y-3 text-white/95">
          {% for item in pageContent.methodology.dont %}
          <li class="text-sm font-medium leading-snug">{{ item }}</li>
          {% endfor %}
        </ul>
      </article>
    </div>
  </div>
</section>

<!-- Become a Professional Section 1 -->
<section id="join" class="py-12 lg:py-16 px-6 sm:px-8 lg:px-4">
  <div class="container-unified">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-normal text-white text-center mb-8 lg:mb-10 italic" style="font-family: Georgia, 'Times New Roman', serif;">{{ pageContent.professional.title }}</h2>

    <div class="space-y-6">
      {% set guides = [
        "OPTIMIZING YOUR LINKEDIN FOR AI JOBS",
        "AI CONSULTING PORTFOLIO STARTER GUIDE",
        "A GITHUB PROFILE THAT GETS YOU INTERVIEWS",
        "SETTING UP CALENDLY & ZAPIER FOR MEETINGS"
      ] %}

      {% for guide in guides %}
      <article class="bg-gradient-orange border border-white/20 rounded-2xl p-8 shadow-2xl backdrop-blur">
        <h3 class="text-2xl lg:text-3xl font-serif font-bold text-white text-center mb-3 uppercase tracking-widest">{{ guide }}</h3>
        <p class="text-white/85 text-center text-sm leading-relaxed max-w-xl mx-auto">
          Practical guides and templates to help you build a professional online presence that stands out to employers and clients.
        </p>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
